{% extends 'base.html.twig' %}

{% block title %}
    Log in !
{% endblock %}


{% block main %}
    <div class="container">
        <div class="d-flex justify-content-center">
            <h1 class="text-center">Se connecter</h1>
        </div>
        <br>
        <div class="d-flex justify-content-center" style="margin-top: 1em;">
            <div>
                <form name="login_form" method="post" >
                    <div class="form-group">
                        <label class="required" for="username">Pseudo</label>
                        <input type="text" name="_username" id="username" class="form-control" required="required">
                    </div>
                    <div class="form-group">
                        <label class="required" for="password">Mot de passe</label>
                        <input type="password" name="_password" id="password"class="form-control" required="required">
                    </div>
                    <label>
                        <input type="checkbox" name="_remember_me" checked />
                        Se souvenir de moi
                    </label>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}">
                    <br>
                    <button class="btn btn-block" type="submit" style="background-color: #4db6ac; color:white">Se Connecter</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}


