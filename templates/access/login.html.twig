{% extends 'base.html.twig' %}

{% block title %}
    Log in !
{% endblock %}


{% block main %}
    <style>
        label{
            color: #272353;
        }

    </style>


    <div class="container d-flex justify-content-center" style="display: flex;
                                            align-items: center;
                                            justify-content: center;">
        <div class="col-12 col-md-4 m-5">
            <form name="login_form" method="post">
                <h5 class="text-center" style="color: #272353;">Connexion</h5>
                <div class="form-group">
                    <label class="required" for="username">Pseudo</label>
                    <input type="text" name="_username" id="username" class="form-control" required="required">
                </div>
                <div class="form-group">
                    <label class="required" for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" required="required">
                </div>
                <label>
                    <input type="checkbox" name="_remember_me" checked/>
                    Se souvenir de moi
                </label>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <br>
                <button class="btn btn-outline-primary btn-block" type="submit">
                    Se Connecter
                </button>
            </form>
        </div>
    </div>

{% endblock %}


