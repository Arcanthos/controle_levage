{% extends 'base.html.twig' %}


{% block title %}
    Nouveau Contact | {{ parent() }}
{% endblock %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-sm- 10 col-md-8 col-lg-6 p-3">
                <h1 class="text-center">Nouveau Contact </h1>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 m-5 p-3">
                {% block form %}
                    {{ form_start(contactForm) }}
                    {{ form_widget(contactForm) }}
                    <br>
                    <button type="submit" class="btn btn-block" style="background-color: #ff8906; color:#fffffe">Ajouter le contact</button>
                    {{ form_end(contactForm) }}
                {% endblock %}
            </div>
        </div>

    </div>
{% endblock %}