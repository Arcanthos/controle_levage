{% extends 'base.html.twig' %}

{% block title %}
    Equipement à Contrôler
{% endblock %}

{% block main %}
    <div class="navbar navbar-expand-lg col-12 shadow-sm" style="background: #fffffe">
        <a href="{{ path('homePanel') }}">
            <button class="btn btn-outline-primary mx-3"><i class="fal fa-arrow-to-left"></i> Retour</button>
        </a>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 pr-md-0">
            <div class="container">
                <div class="card mt-3 shadow-sm">
                    <div class="card-header">
                        <h5>Equipement nécessitant un controle prochain</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead class="sticky-top bg-light">
                            <tr>
                                <th scope="col">Type d'équipement</th>
                                <th scope="col">Désignation de l'équipement</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for equipment in equipmentToControl %}
                                <tr>
                                    <td>{{ equipment.equipmentCategory.category }}</td>
                                    <td>{{ equipment.brand }} {{ equipment.model }}</td>
                                    <td><a><button class="btn btn-warning">Faire un devis</button></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

