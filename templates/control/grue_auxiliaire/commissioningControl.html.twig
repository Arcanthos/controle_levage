                                        <td><input id="plaque2" type="radio" name="plaque"> Non</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td>Marquage CE</td>
                                        <td><input id="CE1" type="radio" name="CE"> Oui</td>
                                        <td><input id="CE2" type="radio" name="CE"> Non</td>
