                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th scope="col"> </th>
                                    <th scope="col">B</th>
                                    <th scope="col">D</th>
                                    <th scope="col">SO</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td id="lastControl">Dernier rapport
                                        <i class="fa fa-info-circle" aria-hidden="true"
                                           title="SO si la date d'installation est inférieure à 6 mois"></i>
                                    </td>
