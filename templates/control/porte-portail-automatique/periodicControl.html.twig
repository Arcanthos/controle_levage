                                    <td><input type="radio" id="guidage1" name="guidage" value="B"></td>
                                    <td><input type="radio" id="guidage2" name="guidage" value="D"></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td id="articulation" data-val="Anomalie des articulations">Etat des articulations</td>
                                    <td><input type="radio" id="articulation1" name="articulation" value="B"></td>
                                    <td><input type="radio" id="articulation2" name="articulation" value="D"></td>
                                    <td></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-4">
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th scope="col">&nbsp;</th>
                                    <th scope="col">B</th>
                                    <th scope="col">D</th>
                                    <th scope="col">SO</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td id="fixations" data-val="Anomalie des fixations">Etat des fixations</td>
                                    <td><input type="radio" id="fixations1" name="fixations" value="B"></td>
                                    <td><input type="radio" id="fixations2" name="fixations" value="D"></td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <td id="equilibrage" data-val="Anomalie du système d'équilibrage">Etat du système d'équilibrage</td>
                                    <td><input type="radio" id="equilibrage1" name="equilibrage" value="B"></td>
                                    <td><input type="radio" id="equilibrage2" name="equilibrage" value="D"></td>
                                    <td><input type="radio" id="equilibrage3" name="equilibrage" value="SO"></td>
                                </tr>
                                </tbody>
                            </table>
                            <p class="text-center"><b>Hydraulique / Pneumatique</b></p>
                            <table class="table table-striped">
                                <thead>
                                <tr>
                                    <th scope="col">&nbsp;</th>
                                    <th scope="col">B</th>
                                    <th scope="col">D</th>
                                    <th scope="col">SO</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td id="fuiteVerin" data-val="Fuite sur vérins ou moteur hydraulique">Fuite vérins ou moteur hydr.</td>
                                    <td><input type="radio" id="fuiteVerin1" name="fuiteVerin" value="B"></td>
