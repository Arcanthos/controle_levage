                                    <td id="fissure" data-val="Anomalie de fissure, de soudure ou de détérioration sur la structure porteuse">
                                        Fissure, soudure et détérioration</td>
                                    <td><input type="radio" id="fissure1" name="fissure" value="B"></td>
                                    <td><input type="radio" id="fissure2" name="fissure" value="D"></td>
                                    <td></td>
                                </tr>
