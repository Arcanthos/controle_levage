                                </tr>
                                <tr>
                                    <td id="ejectionRessort" data-val="Anomalie de protection de l'éjection des ressorts">Protection éjection des ressorts</td>
                                    <td><input type="radio" id="ejectionRessort1" name="ejectionRessort" value="B"></td>
                                    <td><input type="radio" id="ejectionRessort2" name="ejectionRessort" value="D"></td>
                                    <td><input type="radio" id="ejectionRessort3" name="ejectionRessort" value="SO"></td>
                                </tr>
