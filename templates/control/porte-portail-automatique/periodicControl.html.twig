                                    <td><input type="radio" id="oxydationMecanisme3" name="oxydationMecanisme" value="SO"></td>
                                </tr>
                                <tr>
                                    <td id="propreteMecanisme" data-val="Défaut de propreté du mécanisme">Propreté</td>
                                    <td><input type="radio" id="propreteMecanisme1" name="propreteMecanisme" value="B"></td>
                                    <td><input type="radio" id="propreteMecanisme2" name="propreteMecanisme" value="D"></td>
