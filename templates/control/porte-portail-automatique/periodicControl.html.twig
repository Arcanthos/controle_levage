                                    <td><input type="radio" id="flexibles1" name="flexibles" value="B"></td>
                                    <td><input type="radio" id="flexibles2" name="flexibles" value="D"></td>
                                    <td><input type="radio" id="flexibles3" name="flexibles" value="SO"></td>
                                </tr>
