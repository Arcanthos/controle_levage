{% extends 'base.html.twig' %}

{% block title %}
    Contrôles à effectuer
{% endblock %}

{% block main %}
    <div class="navbar navbar-expand-lg col-12 shadow-sm" style="background: #fffffe">
        <a href="{{ path('homePanel') }}">
            <button class="btn btn-outline-primary mx-3"><i class="fal fa-arrow-to-left"></i> Retour</button>
        </a>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 pr-md-0">
            <div class="container">
                <div class="card mt-3 shadow-sm">
                    <div class="card-header">
                        <h5>Controle à effectuer</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead class="sticky-top bg-light">
                            <tr>
                                <th scope="col">Type d'équipement</th>
                                <th scope="col">Désignation de l'équipement</th>
                                <th scope="col">Type de controle</th>
                                <th scope="col">Date du controle</th>
                                <th scope="col">Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for control in controlsToDo %}
                                <tr>
                                    <td>{{ control.controlEquipment.equipmentCategory.category }}</td>
                                    <td>{{ control.controlEquipment.brand }} {{ control.controlEquipment.model }}</td>
                                    <td>{{ control.type }}</td>
                                    <td>{{ control.date|date("d/m/Y H:i") }}</td>
                                    <td>
                                        <a href="{{ path('accessControl',{'id':control.id} ) }}">
                                            <button class="btn btn-success">Commencer le Controle</button>
                                        </a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

