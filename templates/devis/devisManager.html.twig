{% extends 'base.html.twig' %}

{% block title %}
    Gestion des devis
{% endblock %}

{% block main %}
    <div class="navbar navbar-expand-lg col-12 shadow-sm" style="background: #fffffe">
        <a href="{{ path('homePanel') }}">
            <button class="btn btn-outline-primary mx-3"><i class="fal fa-arrow-to-left"></i> Retour</button>
        </a>
        <h5>Gestion des devis</h5>
    </div>
    <div class="container">
        <div class="card mt-3 shadow-sm">
            <div class="card-header">
                <h5>Devis en attente</h5>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead class="sticky-top bg-light">
                    <tr>
                        <th scope="col">Devis</th>
                        <th scope="col">Client</th>
                        <th scope="col">Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for devis in devisOpen %}
                        {% set companyName = devis.clientCompany.name %}
                        <tr>
                            <td><a href="{{ asset(devis.pdfPath) }}" target="_blank">
                                    <button class="btn" style="background-color: #272353; color: #fffffe"><i
                                                class="far fa-eye"></i></button>
                                </a></td>
                            <td>{{ companyName }}</td>
                            <td>
                                <a href="{{ path('create_control', {'devisId': devis.id }) }}">
                                    <button class="btn btn-success">Valider et le devis et Planifier le
                                        controle
                                    </button>
                                </a>
                                <a>
                                    <button class="btn btn-warning  ">Devis Refus√©</button>
                                </a>
                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>






{% endblock %}



