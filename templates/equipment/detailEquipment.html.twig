{% extends 'base.html.twig' %}

{% block title %}
    Informations sur l'equipement {{ equipment.equipmentCategory.category }}
{% endblock %}

{% block main %}
    <div class="navbar navbar-expand-lg col-12 shadow-sm" style="background: #fffffe">
        <a href="{{ path('detail_client_company', {'id': equipment.clientCompany.id }) }}">
            <button class="btn btn-outline-primary mx-3"><i class="fal fa-arrow-to-left"></i> Retour</button>
        </a>
        <h5>Informations sur l'équipement </h5>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 pr-md-0">
            <div class="container">
                <div class="card mt-3 shadow-sm">
                    <div class="card-header">
                        <h5>{{ equipment.equipmentCategory.category }}</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                Type : {{ equipment.equipmentCategory.category }}<br>
                                Marque : {{ equipment.brand }}<br>
                                Modèle : {{ equipment.model }}<br>
                                N° de série : {{ equipment.serialNumber }}<br><br>
                                <a href="{{ path('create_control', {'id': equipment.id}) }}">
                                    <button id="createControl" class="btn btn-outline-primary">Procéder au contrôle</button>
                                </a>
                            </div>
                            <div class="col-md-6">
                                Année de fabrication: {{ equipment.year }}<br>
                                Précédent contrôle : <br>
                                Prochain contrôle : <br><br><br>
                                <a href="">
                                    <button id="editControl" class="btn btn-outline-primary">Modifier la date du prochain contrôle</button>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Liste des contrôles-->
                <div class="card mt-3 shadow-sm">
                    <div class="card-header">
                        <h5>Liste des contrôles</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Devis</th>
                                    <th scope="col">Rapport</th>
                                    <th scope="col">Facture</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!--balise for -->
                                    <tr>
                                       <td></td>
                                    </tr>
                                <!-- balise endfor -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>








{% endblock %}

